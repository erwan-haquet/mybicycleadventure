<div class="stay-tuned alert alert-primary mb-0">
    <div class="container">
        <h2 class="title">{{ "pages.the_project.stay_tuned_title"|trans }}</h2>
        <p>{{ "pages.the_project.stay_tuned_paragraph"|trans|raw }}</p>

        <div class="form">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="row">
                <div class="col-xl-4">
                    {{ form_row(form.name, {
                        label: "form.label.first_name",
                        row_attr: {class: 'form-floating mb-3'}
                    }) }}
                </div>
                <div class="col-xl-4">

                    {{ form_row(form.email, {
                        label: "form.label.email",
                        row_attr: {class: 'form-floating mb-3'}
                    }) }}
                </div>
                <div class="col-xl-4">
                    <div class="justify-content-md-center">
                        {{ form_row(form.save, {
                            label: "marketing.early_bird.register",
                            attr: { class: 'button btn-primary btn-xl fw-bold w-100' },
                        }) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
