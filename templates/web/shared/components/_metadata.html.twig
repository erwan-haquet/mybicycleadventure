{# @var metadata \App\ContentManagement\Domain\Seo\Model\Metadata #}

<title>{{ metadata.title }}</title>
<meta name="description" content="{{ metadata.description }}">
<meta name="robots"
      content="{{ metadata.noindex ? "noindex" : "index" }}, {{ metadata.nofollow ? "nofollow" : "follow" }}"/>

{% for alternate in metadata.localeAlternates %}
    <link rel="alternate"
          hreflang="{{ alternate.locale }}"
          href="{{ alternate.url }}"/>
{% endfor %}

{% if metadata.canonicalUrl is not null %}
    <link rel="canonical" href="{{ metadata.canonicalUrl }}"/>
{% endif %}


{% if metadata.openGraph is not null %}
    {{ _self.open_graph(metadata.openGraph) }}
{% endif %}

{% macro open_graph(openGraph) %}
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="My Bicycle Journey">
    <meta property="og:url" content="{{ openGraph.url }}">
    <meta property="og:locale" content="{{ openGraph.locale }}">

    {% if openGraph.title is not null %}
        <meta property="og:title" content="{{ openGraph.title }}">
    {% endif %}

    {% if openGraph.description is not null %}
        <meta property="og:description" content="{{ openGraph.description }}">
    {% endif %}

    {% if openGraph.image is not null %}
        <meta property="og:image" content="{{ openGraph.image }}">
    {% endif %}

    {% for alternate in openGraph.localeAlternates %}
        <meta property="og:locale:alternate" content="{{ alternate.locale }}">
    {% endfor %}
{% endmacro %}
