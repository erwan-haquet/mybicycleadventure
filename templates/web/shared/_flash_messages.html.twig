<div class="flash-messages toast-container">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="message toast bg-{{ label }}"
                 role="alert"
                 aria-live="assertive"
                 aria-atomic="true" {{ stimulus_controller('toast') }}
            >
                <div class="d-flex">
                    <div class="toast-body body">
                        {{ message }}
                    </div>
                    <button type="button"
                            class="btn-close btn-close-white"
                            data-bs-dismiss="toast" aria-label="Close">
                    </button>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>
