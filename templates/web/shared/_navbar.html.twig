{% macro locale_selector() %}
    {% set route = app.request.attributes.get('_route') %}
    {% set route_params = app.request.attributes.get('_route_params') %}
    {% set params = route_params|merge(app.request.query.all) %}
    
    <li class="nav-item dropdown ms-auto">
        <a class="nav-link dropdown-toggle" href="#" id="dropdown-language" role="button"
           data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            {{ app.request.locale|locale_name(app.request.locale)|u.title }}
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdown-language">
            {% for locale in locales if locale != app.request.locale %}
                <li>
                    <a class="dropdown-item" href="{{ path(route, params|merge({ _locale: locale })) }}">
                        {{ locale|locale_name(app.request.locale)|u.title }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </li>
{% endmacro %}
