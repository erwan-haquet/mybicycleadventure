<div class="registration-form">
    <h2 class="title">{{ "account_management.signup.create_an_account"|trans }}</h2>

    {{ form_start(form) }}

    {{ form_row(form.username, {
        label: "form.label.username",
        row_attr: {class: 'form-floating mb-4'}
    }) }}

    {{ form_row(form.email, {
        label: "form.label.email",
        row_attr: {class: 'form-floating mb-4'}
    }) }}

    {{ form_row(form.plainPassword, {
        label: "form.label.password",
        row_attr: {class: 'form-floating mb-4'}
    }) }}

    {{ form_row(form.agreeTerms, {
        label: "account_management.signup.agree_terms",
        row_attr: {class: 'form-floating mb-4'}
    }) }}

    <button type="submit" class="btn btn-xl fw-bold btn-primary w-100">
        {{ "account_management.signup.register"|trans }}
    </button>
</div>

{{ form_end(form) }}