{% extends "web/layout.html.twig" %}

{% block page_contents %}
    <main id="signup">
        <div class="container pt-3 pt-lg-5">
            <div class="row">
                <div class="
                    col-12
                    col-md-8 offset-md-2
                    col-xl-6 offset-xl-3
                ">
                    <div class="registration-form mb-4">
                        <div class="card">
                            <div class="card-body">
                                {{ _self.navigation(context) }}

                                {% if context == 'signup' %}
                                    {% include "web/account_management/signup/_signup.html.twig" %}
                                {% else %}
                                    {% include "web/account_management/signup/_login.html.twig" %}
                                {% endif %}
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% macro navigation(context) %}
    <ul class="nav nav-tabs nav-fill mb-5" id="ex1" role="tablist">
        <li class="nav-item" role="presentation">
            <a
                    class="nav-link {{ context == 'signup' ? 'active' }}"
                    id="ex2-tab-1"
                    data-mdb-toggle="tab"
                    href="{{ path('signup') }}"
                    role="tab"
                    aria-controls="ex2-tabs-1"
                    aria-selected="true">
                {{ 'global.signup'|trans }}
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a
                    class="nav-link {{ context == 'login' ? 'active' }}"
                    id="ex2-tab-2"
                    data-mdb-toggle="tab"
                    href="{{ path('login') }}"
                    role="tab"
                    aria-controls="ex2-tabs-2"
                    aria-selected="false"
            >
                {{ 'global.login'|trans }}
            </a>
        </li>
    </ul>
{% endmacro %}

