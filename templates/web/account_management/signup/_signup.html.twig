<p class="card-text text-center text-muted mb-5">{{ "account_management.signup.description"|trans|raw }}</p>

{{ form_start(form) }}

{{ form_row(form.username, {
    label: "form.label.username",
    attr: {autocomplete: 'off'},
    row_attr: {class: 'form-floating mb-4'}
}) }}

{{ form_row(form.email, {
    label: "form.label.email",
    attr: {autocomplete: 'username'},
    row_attr: {class: 'form-floating mb-4'}
}) }}

{{ form_row(form.plainPassword, {
    label: "form.label.password",
    row_attr: {class: 'form-floating mb-4'}
}) }}


<button type="submit" class="btn btn-xl fw-bold btn-primary w-100 mb-3">
    {{ "account_management.signup.register"|trans }}
</button>

{{ form_end(form) }}

<a href="{{ path('login') }}" class="btn btn-link btn-link w-100 mb-4">
    {{ "account_management.signup.already_have_an_account"|trans }}
</a>

<p class="text-end text-muted privacy-policy">
    {{ "account_management.signup.privacy_policy"|trans({'link': path('privacy_policy')})|raw }}
</p>
