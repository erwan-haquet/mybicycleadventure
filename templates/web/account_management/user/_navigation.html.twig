{# The navigation bar shared between login / signup #}

<ul class="nav nav-tabs nav-fill mb-5" id="ex1" role="tablist">
    <li class="nav-item" role="presentation">
        <a
                class="nav-link {{ context == 'signup' ? 'active' }}"
                id="ex2-tab-1"
                data-mdb-toggle="tab"
                href="{{ path('signup') }}"
                role="tab"
                aria-controls="ex2-tabs-1"
                aria-selected="true">
            {{ 'global.signup'|trans }}
        </a>
    </li>
    <li class="nav-item" role="presentation">
        <a
                class="nav-link {{ context == 'login' ? 'active' }}"
                id="ex2-tab-2"
                data-mdb-toggle="tab"
                href="{{ path('login') }}"
                role="tab"
                aria-controls="ex2-tabs-2"
                aria-selected="false"
        >
            {{ 'global.signin'|trans }}
        </a>
    </li>
</ul>